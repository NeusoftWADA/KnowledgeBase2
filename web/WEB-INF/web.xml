<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserAddServlet</servlet-name>
        <servlet-class>controller.UserAddServlet</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>ShowKnowledgeServlet</servlet-name>
        <servlet-class>controller.ShowKnowledgeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KnowledgeShowContextServlet</servlet-name>
        <servlet-class>controller.KnowledgeShowContextServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KnowledgeInputServlet</servlet-name>
        <servlet-class>controller.KnowledgeInputServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>User_detailUpdateServlet</servlet-name>
        <servlet-class>controller.User_detailUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BeginRefreshServlet</servlet-name>
        <servlet-class>controller.BeginRefreshServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BeginRefreshServlet</servlet-name>
        <url-pattern>/begin/refresh</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>User_detailUpdateServlet</servlet-name>
        <url-pattern>/detail/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KnowledgeInputServlet</servlet-name>
        <url-pattern>/knowledge/input</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KnowledgeShowContextServlet</servlet-name>
        <url-pattern>/show/Knowledge/Context</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowKnowledgeServlet</servlet-name>
        <url-pattern>/show/knowledge</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserAddServlet</servlet-name>
        <url-pattern>/user/Add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>






    <!--
        <filter>
            <filter-name>UserFilter</filter-name>
            <filter-class>filter.UserFilter</filter-class>
        </filter>
        <filter-mapping>
            <filter-name>UserFilter</filter-name>
            <url-pattern>/*</url-pattern>
        </filter-mapping>
    -->

    <welcome-file-list>
        <welcome-file>begin/refresh</welcome-file>
    </welcome-file-list>
</web-app>